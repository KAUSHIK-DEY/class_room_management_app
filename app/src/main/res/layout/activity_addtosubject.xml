<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addtosubject"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="58dp"
            android:weightSum="1"
            android:id="@+id/radioEventGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Material"
                android:textColor="@color/orange"
                android:id="@+id/radioMaterialButton"
                android:layout_gravity="left"
                android:checked="false"
                android:textSize="25sp"
                android:buttonTint="@color/white"
                android:layout_marginBottom="20dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Assignment"
                android:textColor="@color/orange"
                android:id="@+id/radioAssignmentButton"
                android:layout_gravity="start"
                android:checked="false"
                android:textSize="25sp"
                android:buttonTint="@color/white"
                android:layout_marginBottom="20dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:text="Add Quiz"
                android:id="@+id/radioQuizButton"
                android:layout_gravity="left"
                android:checked="false"
                android:textSize="25sp"
                android:buttonTint="@color/white"
                android:layout_marginBottom="20dp"/>
        </RadioGroup>

        <LinearLayout

            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/button_AddNewEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:text="Add"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:onClick="movetonext"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>